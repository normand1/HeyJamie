{
  "schemaVersion": 2,
  "transcriptId": "topic-shift-to-podcast",
  "description": "Validates that when user shifts from discussing architecture to talking about podcasts, the intent planner correctly switches from excalidraw to browser action",
  "expectations": [
    {
      "id": "architecture-excalidraw-response-ok",
      "event": "excalidraw-response",
      "match": {
        "ok": true
      },
      "timing": { "afterSec": 5, "beforeSec": 90 }
    },
    {
      "id": "podcast-browseros-request",
      "event": "browseros-request",
      "match": {
        "queryPattern": "podcast|rogan|latent"
      },
      "timing": { "afterSec": 30, "beforeSec": 120 }
    }
  ],
  "summary": {
    "runComplete": {
      "status": "success",
      "excalidrawRunsStarted": { "min": 1, "max": 3 },
      "excalidrawRunsSucceeded": { "min": 1, "max": 3 },
      "excalidrawRunsFailed": { "max": 1 },
      "browserosRunsStarted": { "min": 1, "max": 3 },
      "browserosRunsSucceeded": { "min": 1, "max": 3 },
      "browserosRunsFailed": { "max": 1 }
    }
  }
}
